<h3 class="tireh">{{ heading_title }}</h3>
<div class="row product-slider">
  {% for product in products %}
  <div class="product-layout col-lg-3 col-md-3 col-sm-6 col-xs-12">
    <div class="product-thumb transition">
      <div class="image">
	  	<div class="hoverbuttons"> 
	  		<button type="button" data-toggle="tooltip" data-placement="right" title="{{ button_wishlist }}" onclick="wishlist.add('{{ product.product_id }}');"><i class="fa fa-automobile"></i></button>
	  		<button type="button" data-toggle="tooltip" data-placement="right" title="{{ button_compare }}" onclick="compare.add('{{ product.product_id }}');"><i class="fa fa-exchange"></i></button>
	  	</div>
	  	<a href="{{ product.href }}"><img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="img-responsive" /></a>
	  </div>
      <div class="caption">
        <a href="{{ product.href }}">{{ product.name }}</a>
        <p class="descr">{{ product.description }}</p>
         {% if product.price %}
         <p class="price">
           {% if not product.special %}
           {{ product.price }}
           {% else %}
           <span class="price-old">{{ product.price }}</span><span class="price-new">{{ product.special }}</span>
           {% endif %}
           {% if product.tax %}
           <span class="price-tax">{{ text_tax }} {{ product.tax }}</span>
           {% endif %}
		  <button type="button" onclick="cart.add('{{ product.product_id }}');" class="btn btn-primary btn-block">{{ button_cart }}</button>
         </p>
         {% endif %}
        {% if product.rating %}
        <div class="rating">{% for i in 1..5 %}
          {% if product.rating < i %} <span class="fa fa-stack"><i class="fa fa-star-o fa-stack-2x"></i></span> {% else %} <span class="fa fa-stack"><i class="fa fa-star fa-stack-2x"></i><i class="fa fa-star-o fa-stack-2x"></i></span> {% endif %}
          {% endfor %}</div>
        {% endif %}
      </div>
    </div>
  </div>
  {% endfor %}
</div>

<div class="panel-group" id="partscatalog">
	{% for category in categories %}
	{% if category.category_id %}
	{% if category.category_id == category_id %} 
	<div class="panel panel-default">
		<div class="panel-heading">
			{% if category.children %}
			<a data-toggle="collapse" data-parent="#partscatalog" href="#{{ category.category_id }}" class="active">{{ category.name }}</a>
			{% else %}
			<a href="{{ category.href }}" class="active nochild">{{ category.name }}</a>
			{% endif %}
		</div>
		{% if category.children %}
		<div id="{{ category.category_id }}" class="panel-collapse collapse in">
			<div class="panel-body">
			  {% for child in category.children %}
			  {% if child.category_id == child_id %}
			  <a href="{{ child.href }}" class="list-group-item active">{{ child.name }}</a>
			  {% else %}
			  <a href="{{ child.href }}" class="list-group-item">{{ child.name }}</a>
			  {% endif %}
			  {% endfor %}
			</div>
		</div>
		{% endif %}
	</div>
	{% else %}
	<div class="panel panel-default">
		<div class="panel-heading">
			{% if category.children %}
			<a data-toggle="collapse" data-parent="#accordion" href="#{{ category.category_id }}" class="collapsed">{{ category.name }}</a>
			{% else %}
			<a href="{{ category.href }}" class="nochild">{{ category.name }}</a>
			{% endif %}
			
		</div>
		{% if category.children %}
		<div id="{{ category.category_id }}" class="panel-collapse collapse">
			<div class="panel-body">
			  {% for child in category.children %}
			  {% if child.category_id == child_id %}
			  <a href="{{ child.href }}" class="list-group-item active">{{ child.name }}</a>
			  {% else %}
			  <a href="{{ child.href }}" class="list-group-item">{{ child.name }}</a>
			  {% endif %}
			  {% endfor %}
			</div>
		</div>
		{% endif %}
	</div>
	{% endif %}
	{% endif %}
	{% endfor %}
</div>